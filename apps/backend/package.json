{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend application for SQ-QB Integration",
  "main": "dist/index.js",
  "files": [
    "dist/**",
    "prisma/**"
  ],
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "node dist/prisma/seed.js"
  },
  "scripts": {
    "build": "tsc",
    "build:seed": "tsc -p tsconfig.seed.json",
    "start": "node dist/index.js",
    "start:ci": "node dist/index-minimal.js",
    "build:ci": "tsc src/index-minimal.ts --outDir dist",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:seed": "node dist/prisma/seed.js",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "argon2": "^0.31.0",
    "bullmq": "^5.56.9",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "node-fetch": "^2.7.0",
    "pg": "^8.11.1",
    "pino": "^8.14.1",
    "pino-http": "^10.5.0",
    "prom-client": "^15.1.3",
    "prisma": "^5.1.1",
    "redis": "^4.6.7",
    "wait-on": "^8.0.4",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@swc/core": "^1.13.3",
    "@swc/jest": "^0.2.39",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@types/node-fetch": "^2.6.4",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.1",
    "nock": "^13.3.2",
    "pino-pretty": "^10.0.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
