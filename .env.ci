# CI Environment Configuration
# This file contains non-secret configuration needed for the CI pipeline to run
# These point to localhost because the CI script runs on the Docker host

NODE_ENV=test
PORT=3001

# --- Database Configuration ---
# Points to PgBouncer on localhost (Docker host perspective)
DATABASE_URL="postgresql://sq_qb_user:your_secure_password@pgbouncer:6432/sq_qb_integration?pgbouncer=true"

# --- Redis Configuration ---
REDIS_HOST=localhost
REDIS_PORT=6379

# --- PostgreSQL Configuration ---
POSTGRES_USER=sq_qb_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=sq_qb_integration

# --- Security Configuration ---
PASSWORD_PEPPER=a_very_secret_ci_pepper_value_for_testing_!@#$
SQUARE_WEBHOOK_SIGNATURE_KEY=ci_test_webhook_signature_key_for_testing

# --- Square API Configuration (Test Values) ---
SQUARE_ACCESS_TOKEN=ci_test_square_access_token
SQUARE_APPLICATION_ID=ci_test_application_id
SQUARE_ENVIRONMENT=sandbox

# --- QuickBooks Configuration (Test Values) ---
QB_CLIENT_ID=ci_test_qb_client_id
QB_CLIENT_SECRET=ci_test_qb_client_secret
QB_REDIRECT_URI=http://localhost:3001/auth/quickbooks/callback
QB_SCOPE=com.intuit.quickbooks.accounting

# --- Application Configuration ---
SESSION_SECRET=ci_test_session_secret_for_testing_purposes
JWT_SECRET=ci_test_jwt_secret_for_testing_purposes

# --- Monitoring Configuration ---
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# --- Logging Configuration ---
LOG_LEVEL=debug
