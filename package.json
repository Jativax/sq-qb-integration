{
  "name": "sq-qb-integration",
  "version": "1.0.0",
  "description": "SQ-QB Integration Monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter backend dev",
    "build": "pnpm --filter backend build",
    "dev:frontend": "pnpm --filter frontend dev",
    "build:frontend": "pnpm --filter frontend build",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:frontend\"",
    "build:all": "pnpm build && pnpm build:frontend",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:e2e": "cd packages/e2e-tests && npm test",
    "test:e2e:headed": "cd packages/e2e-tests && npm run test:headed",
    "test:e2e:debug": "cd packages/e2e-tests && npm run test:debug",
    "test:e2e:install": "cd packages/e2e-tests && npm install && npm run install-browsers",
    "prepare": "node -e \"try { require('child_process').execSync('husky install') } catch (e) { console.log('husky install skipped') }\"",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v --remove-orphans",
    "db:generate": "pnpm --filter backend prisma:generate",
    "db:migrate": "pnpm --filter backend prisma:migrate",
    "db:studio": "pnpm --filter backend prisma:studio",
    "db:seed": "pnpm --filter backend prisma:seed",
    "db:reset": "pnpm --filter backend prisma:reset",
    "test": "pnpm --filter backend test",
    "test:watch": "pnpm --filter backend test:watch",
    "test:coverage": "pnpm --filter backend test:coverage",
    "ci:checks": "bash run-ci-checks.sh"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "packageManager": "pnpm@8.6.12"
}
